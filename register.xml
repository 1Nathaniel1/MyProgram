<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_name"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/iv_head">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账   号:"
            android:textColor="#000000"
            android:textSize="30dp" />
        <EditText
            android:id="@+id/EditTextRegistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号/用户名/邮箱"
            android:textColorHint="#0a0a0a"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_password"
        android:orientation="horizontal"
        android:layout_below="@id/ll_name"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密   码:"
            android:textColor="#000000"
            android:textSize="30dp" />
        <EditText
            android:id="@+id/EditTextRegisterPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textColorHint="#0a0a0a"
            android:textSize="20sp"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_repassword"
        android:orientation="horizontal"
        android:layout_below="@id/ll_password"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证密码："
            android:textColor="#000000"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/EditTextRepeatRegisterPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textColorHint="#0a0a0a"
            android:textSize="20sp"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/ll_repassword"
        android:id="@+id/bt_sureRegist"
        android:background="@drawable/start"
        android:layout_centerInParent="true"
        android:text="确认注册"
        android:textSize="30sp"
        android:textColor="#ffff"/>
</RelativeLayout>